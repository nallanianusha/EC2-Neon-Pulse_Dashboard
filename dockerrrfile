FROM python:3.12.12-alpine3.23 AS build
ADD . /pythonapp
WORKDIR /pythonapp
RUN pip install --prefix=/aws -r requirements.txt

FROM python:3.12.12-alpine3.23 AS runtime 
LABEL project="pythonapp"
LABEL author="devopsteam"
COPY --from=build /pythonapp /anu
COPY --from=build /aws /usr/share 
WORKDIR /anu
EXPOSE 5001
CMD ["python", "app.py"]